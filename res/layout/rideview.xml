<?xml version="1.0" encoding="utf-8"?>

<view class="de.andlabs.teleporter.RideView"
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_height="?android:attr/listPreferredItemHeight"
    android:layout_width="fill_parent"
		android:padding="0dip"
    >

		<TextView
			android:id="@+id/dep_label"
			android:textSize="11dip"
			android:paddingTop="3dip"
			android:paddingLeft="8dip"
			android:textColor="#77FFFFFF"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentTop="true"
			android:text="@string/dep_label"
		></TextView>
		<TextView
			android:id="@+id/dep"
			android:textSize="16dip"
			android:textStyle="bold"
			android:paddingLeft="3dip"
			android:textColor="#77FFFFFF"
			android:text="@string/dep_label"
			android:layout_alignBaseline="@id/dep_label"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@id/dep_label"
			android:layout_alignParentTop="true"
		></TextView>
		
		<TextView
			android:id="@+id/in"
			android:textSize="11dip"
			android:paddingLeft="9dip"
			android:paddingBottom="3dip"
			android:textColor="#77FFFFFF"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentBottom="true"
			android:text="in"
		></TextView>
		<TextView
			android:id="@+id/hours"
			android:textSize="46dip"
			android:textStyle="bold"
			android:textColor="#FFFFFF"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@id/in"
			android:layout_alignBaseline="@id/in"
			
		></TextView>
		<TextView
			android:id="@+id/hours_label"
			android:textSize="11dip"
			android:textColor="#77FFFFFF"
			android:paddingLeft="-3dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@id/hours"
			android:layout_alignBaseline="@id/hours"
			android:text="h"
		></TextView>
		<TextView
			android:id="@+id/minutes"
			android:textSize="46dip"
			android:textStyle="bold"
			android:textColor="#FFFFFF"
			android:paddingLeft="3dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@id/hours_label"
			android:layout_alignBaseline="@id/in"
			
		></TextView>
		<TextView
			android:id="@+id/minutes_label"
			android:textSize="11dip"
			android:textColor="#77FFFFFF"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@id/minutes"
			android:layout_alignBaseline="@id/minutes"
			android:text="min"
		></TextView>
		
		<ImageView
			android:id="@+id/plugIn"
			android:layout_width="88dip"
			android:layout_height="37dip"
			android:layout_alignParentTop="true" 
			android:layout_centerHorizontal="true" 
			android:src="@drawable/icon"
			android:visibility="gone"
		/>
		<TextView
			android:id="@+id/duration"
			android:textSize="11dip"
			android:textStyle="bold"
			android:textColor="#FFFFFF"
			android:paddingLeft="161dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignBaseline="@id/minutes"
		></TextView>
		
		<TextView
			android:id="@+id/arr"
			android:textSize="25dip"
			android:textStyle="bold"
			android:textColor="#FFFFFF"
			android:paddingRight="7dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_alignParentTop="true"
		></TextView>
		<TextView
			android:id="@+id/arr_label"
			android:textSize="11dip"
			android:paddingRight="5dip"
			android:textColor="#77FFFFFF"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignBaseline="@id/dep_label"
			android:layout_toLeftOf="@id/arr"
			android:text="@string/arr_label"
		></TextView>
		
		<ImageView
			android:id="@+id/currency"
			android:paddingRight="5dip"
			android:paddingBottom="3dip"
			android:src="@drawable/currency"
			android:layout_alignRight="@id/arr"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignBottom="@id/in"
		/>
		<TextView
			android:id="@+id/price"
			android:textSize="16dip"
			android:textStyle="bold"
			android:paddingRight="2dip"
			android:textColor="#88000000"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toLeftOf="@id/currency"
			android:layout_alignBaseline="@id/in"
		></TextView>
		
		<ImageView android:id="@+id/throbber"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:src="@drawable/loading"
			android:visibility="gone"
		/>
</view>
